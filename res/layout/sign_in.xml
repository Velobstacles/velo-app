<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_in"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/MainGreen"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/username_field"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="5dp"
        android:hint="username"
        android:background="@drawable/rounded_edittext"
        android:ems="10" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/username_field"
        android:layout_alignBottom="@+id/username_field"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/facebook_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/username_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textColor="@color/White"
        android:background="@color/Red"
        android:textSize="25dp"
        android:typeface="sans"          
        android:paddingBottom="25dp"             
        android:text="@string/login_facebook" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/facebook_button"
        android:layout_below="@+id/facebook_button"
        android:textColor="@color/White"
        android:background="@color/MainBlue"
        android:layout_marginTop="24dp"
        android:textSize="25dp"        
        android:typeface="sans"  
        android:text="@string/skip" />

    <Button
        android:id="@+id/login_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/login" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/facebook_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_field"
        android:layout_centerHorizontal="true"
        android:src="@drawable/velobstacles" />

</RelativeLayout>